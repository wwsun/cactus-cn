#socialinfo
  display: inline-block
  list-style: none
  padding: 0
  margin: 0
  li
    display: inline-block
  li:after
    content: ", "
  li:last-child:after
    content: ""
  li:nth-last-child(2):after
    content: " and "

// 文章列表优化
.post-list
  padding: 0
  
  .post-item
    list-style-type: none
    margin-left: 0
    margin-bottom: 1.8rem
    padding: 1.2rem 0
    border-bottom: 1px solid #f0f0f0
    transition: all 0.3s ease
    
    &:last-child
      border-bottom: none
    
    &:hover
      transform: translateX(8px)
      background: linear-gradient(to right, #f8f9fa, transparent)
      padding-left: 1rem
      border-radius: 8px
    
    .meta
      display: block
      font-size: 14px
      color: #999
      min-width: 100px
      margin-right: 16px
      margin-bottom: 0.5rem
      
    .post-content
      flex: 1
      
      a
        color: #333
        text-decoration: none
        font-weight: 600
        font-size: 1.1em
        
        &:hover
          color: #2bbc8a
      
    .post-excerpt
      margin-top: 8px
      color: #777
      font-size: 14px
      line-height: 1.6
      padding-left: 0.5rem
      border-left: 3px solid #e9ecef
      
@media (min-width: 480px)
  .post-list
    .post-item
      display: flex
      margin-bottom: 1.5rem
      align-items: flex-start
      
      &:hover
        transform: translateX(12px)
        padding-left: 1.2rem
      
      .meta
        text-align: left
        min-width: 120px
        margin-bottom: 0
        
      .post-content
        flex: 1

.project-list
  padding: 0
  list-style: none
  margin-top: 1rem
  
  .project-item
    margin-bottom: 0.8rem
    padding: 0.5rem 0
    
    .project-title
      display: inline
      margin-right: 0.5rem
      
      a
        color: #2bbc8a
        text-decoration: none
        font-weight: 600
        
        &:hover
          text-decoration: underline
    
    .project-desc
      display: inline
      color: #666
      
      &:before
        content: " - "
        color: #999

// 移动端优化
@media (max-width: 768px)
  .project-list
    .project-item
      .project-title, .project-desc
        display: block
        
      .project-desc
        margin-top: 0.2rem
        font-size: 0.9em
        
        &:before
          content: ""

// 首页各部分间距简化
#about, #writing, #projects
  margin-bottom: 2.5rem
  
  .h1
    margin-bottom: 1rem
    
    a
      color: #333
      text-decoration: none
      
      &:hover
        color: #2bbc8a

// 首页关于部分简化
#about
  margin-bottom: 2.5rem
  
  p
    margin: 0.8rem 0
    line-height: 1.6
    color: #666
    
    strong
      color: #333
      font-weight: 600
  
  // 社交链接简化
  #socialinfo
    margin: 0.5rem 0
    
    li
      a
        color: #666
        transition: color 0.2s ease
        
        &:hover
          color: #2bbc8a

// 移动端关于部分简化
@media (max-width: 768px)
  #about
    margin-bottom: 2rem
