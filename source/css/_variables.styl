// Fonts
$font-family-body = "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", "Helvetica Neue", "Menlo", "Meslo LG", monospace, sans-serif
$font-family-mono = "SF Mono", "Monaco", "Inconsolata", "Roboto Mono", "Source Code Pro", "Menlo", "Meslo LG", "Consolas", monospace
$font-family-tt = "SF Mono", "Monaco", "Inconsolata", "Roboto Mono", monospace
$font-size = 15px
$line-height = 1.8

// Colors
$color-background = #FFFFFF
$color-link = rgba(212, 128, 170, 1) // vimeo: :selection with alpha=1
$color-text = #383838
$color-light = #8c8c8c
$color-lightest = #383838
$color-accent = #2bbc8a
$ease-in-sine = cubic-bezier(0.47, 0, 0.745, 0.715)

// Logo
logo-width = 0px + hexo-config("customize.logo.width")
logo-height = 0px + hexo-config("customize.logo.height")

// Code Highlight
highlight = hexo-config("customize.highlight") || "tomorrow-night"
$color-code-url = #dccf8f
