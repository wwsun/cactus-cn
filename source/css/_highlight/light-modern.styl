// 现代轻量级高亮主题 - 优化白色背景阅读体验
// Modern light theme optimized for white background readability

.highlight
  background: #f8fafc
  border: 1px solid #e2e8f0
  border-radius: 6px
  color: #334155

  .comment,
  .quote
    color: #64748b
    font-style: italic

  .keyword,
  .selector-tag,
  .addition
    color: #b91c1c
    font-weight: 500

  .number,
  .string,
  .meta .meta-string,
  .literal,
  .doctag,
  .regexp
    color: #059669

  .title,
  .section,
  .name,
  .selector-id,
  .selector-class
    color: #2563eb
    font-weight: 500

  .attribute,
  .attr,
  .variable,
  .template-variable,
  .class .title,
  .type
    color: #7c3aed

  .symbol,
  .bullet,
  .subst,
  .meta,
  .meta .keyword,
  .selector-attr,
  .selector-pseudo,
  .link
    color: #dc2626

  .built_in,
  .deletion
    color: #059669

  .formula
    background: #e2e8f0

  .emphasis
    font-style: italic

  .strong
    font-weight: bold

  .hljs-ln-line
    &.hljs-ln-numbers
      color: #94a3b8
      border-right: 1px solid #e2e8f0
      padding-right: 10px
      margin-right: 10px
